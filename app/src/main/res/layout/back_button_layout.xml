<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="userProfileActivity"
            type="com.example.image_app.ui.main.activity.UserProfileActivity" />

        <variable
            name="imageDetailActivity"
            type="com.example.image_app.ui.main.activity.ImageDetailActivity" />

    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/crdImgBack"
        android:layout_width="80dp"
        android:layout_height="30dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/light_back">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_left_arrow"/>

    </androidx.cardview.widget.CardView>
</layout>